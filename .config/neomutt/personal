# Personal GMAIL

# Receive options
set imap_user = "`pass show gmail | grep '^user:' | cut -d' ' -f2- | cut -d'@' -f1`"
set imap_pass="`pass show app-passwords/k9mail | head -n 1`"
set folder = "imaps://"$imap_user"@imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"
set record        = ""                     # Don't save sent mail manually

mailboxes +INBOX \
          +[Gmail]/Sent\ Mail\
          +[Gmail]/Drafts\

# Send options
set smtp_url = "smtp://$imap_user@smtp.gmail.com:587/"
set smtp_user = $imap_user
set smtp_pass = $imap_pass
set from = "`pass show gmail | grep '^user:' | cut -d' ' -f2-`"
set realname = "Linn Abraham"

set header_cache=~/.cache/neomutt/headers/personal
set message_cachedir=~/.cache/neomutt/bodies/personal
